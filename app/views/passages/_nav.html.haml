    = link_to "NT", "#", :class => 'oyb-nav-button oyb-nav-switcher', :id => "oyb-nt"
    = link_to "Psalm", "#", :class => 'oyb-nav-button oyb-nav-switcher', :id => "oyb-psalm"
    = link_to "Proverb", "#", :class => 'oyb-nav-button oyb-nav-switcher', :id => "oyb-proverb"

